@model IEnumerable<Tehnika.Models.Product>
@using Tehnika.Models
@{
    ViewBag.Title = "ShoppingCart";
}

<h2>Вашата кошничка</h2>


<table class="table" id="productstable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.ImageURL" width="300" height="300" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount) %
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Warranty) дена
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.ActionLink("Избриши", "DeleteCart", new { id = item.Id })
                </td>
            </tr>
        }

    </tbody>

</table>

@{

    var sum = 0.0;
    foreach (Product p in Model)
    {
        sum += p.Price;
    }

    <h2>Вкупната цена на кошничката изнесува @sum денари</h2>
}
<span>
    @Html.ActionLink("Купи производи во кошница", "Buy")
</span>
<link href="~/script2.css" rel="stylesheet" />


